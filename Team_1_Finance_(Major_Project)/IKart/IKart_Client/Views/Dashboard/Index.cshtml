                </div>
                <div class="card-body" style="height:300px;">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>-->

    <!-- Recent Orders Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header fw-semibold text-secondary">
                    <i class="fa fa-receipt me-2 text-primary"></i> Recent Orders
                </div>
                <div class="card-body">
                    <table id="recentOrders" class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var order in Model)

                            {
                <tr>
                    <td>#@order.Order_Id</td>
                    <td>@order.UserName</td>
                    <td>₹@order.TotalAmount.ToString("N2")</td>
                    <td>
                        <span class="badge rounded-pill

                                            @(order.Status == "Paid" ? "bg-success" :

                                              order.Status == "Pending" ? "bg-warning text-dark" :

                                              order.Status == "Failed" ? "bg-danger" : "bg-info text-dark")">

                            @order.Status
                        </span>
                    </td>
                    <td>@order.OrderDate.ToString("dd-MMM-yyyy")</td>
                </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

