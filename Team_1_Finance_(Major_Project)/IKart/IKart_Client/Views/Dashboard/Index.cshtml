@model IEnumerable<IKart_Shared.DTOs.Admin.OrderDto>

@using Newtonsoft.Json

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewBag.Title = "Dashboard"; }

<div class="container mt-5">
    <h2 class="heading-title mb-4">@ViewBag.Title</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-semibold text-secondary">
                    <i class="fa fa-tag me-2 text-muted"></i> Tokens Raised
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">

                        @foreach (var token in ViewBag.Tokens)

                        {
            <li class="mb-2">
                <strong>Token #@token.TicketId</strong> - @token.Subject
                <span class="float-end badge bg-info text-dark">@token.Status</span>
            </li>
}
                    </ul>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header fw-semibold text-secondary">
                    <i class="fa fa-bolt me-2 text-warning"></i> Quick Actions
                </div>
                <div class="card-body d-flex flex-column align-items-center gap-100">
                    <a class="btn btn-sm btn-primary mb-1" href="@Url.Action("Create","Products", new { area = "Admin" })">
                        <i class="fa fa-plus me-1"></i> Add Product
                    </a>
                    <a class="btn btn-sm btn-secondary mb-1" href="@Url.Action("Index","Orders", new { area = "Admin" })">
                        <i class="fa fa-truck me-1"></i> View Orders
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
