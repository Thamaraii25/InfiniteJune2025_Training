﻿@model List<IKart_Shared.DTOs.ProductDto>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
 
@{ ViewBag.Title = "Latest Products";
    var Id = Session["UserId"]; }
 
<h2>Latest Products</h2>
 
<div class="product-grid">
    @foreach (var item in Model)
    {
<div class="product-box">
<img src="~/Content/ProductImages/@item.ProductImage" alt="@item.ProductName" class="product-img" />
<h4>@item.ProductName</h4>
<p>₹@item.Cost</p>
<a href="@Url.Action("Details", "Product", new { id = item.ProductId })">View Details</a>

</div>}
</div>
 
 
<style>
    .product-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }
 
    .product-box {
        width: 200px;
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
        border-radius: 5px;
    }
 
    .product-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 4px;
    }
 
    .btn-info {
        padding: 10px 20px;
        background-color: #17a2b8;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
    }
 
        .btn-info:hover {
            background-color: #138496;
        }
</style>