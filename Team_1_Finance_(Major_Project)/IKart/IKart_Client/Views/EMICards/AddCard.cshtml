@model IKart_Shared.DTOs.EMI_Card.CardRequestDto

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Choose Your EMI Card</h2>

    @using (Html.BeginForm("RequestCard", "EMICards", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm h-100">
                    <h3 class="text-warning">Gold</h3>
                    <p>Limit: ₹25,000</p>
                    <p>Joining Fee: ₹1,000</p>
                    <div class="form-check">
                        @Html.RadioButtonFor(m => m.CardType, "Gold", new { @class = "form-check-input" })
                        <label class="form-check-label">Select</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm h-100">
                    <h3 class="text-info">Diamond</h3>
                    <p>Limit: ₹50,000</p>
                    <p>Joining Fee: ₹2,000</p>
                    <div class="form-check">
                        @Html.RadioButtonFor(m => m.CardType, "Diamond", new { @class = "form-check-input" })
                        <label class="form-check-label">Select</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm h-100">
                    <h3 class="text-secondary">Platinum</h3>
                    <p>Limit: ₹1,00,000</p>
                    <p>Joining Fee: ₹3,000</p>
                    <div class="form-check">
                        @Html.RadioButtonFor(m => m.CardType, "Platinum", new { @class = "form-check-input" })
                        <label class="form-check-label">Select</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />

        <h4 class="text-primary mb-3">Provide Documents</h4>
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.BankName)
                @Html.TextBoxFor(m => m.BankName, new
                {
                    @class = "form-control",
                    placeholder = "Enter bank name",
                    @data_val = "true",
                    @data_val_remote = "true",
                    @data_val_remote_url = Url.Action("ValidateBankName", "EMICards"),
                    @data_val_remote_error = "Bank name must contain only alphabets"
                })
                @Html.ValidationMessageFor(m => m.BankName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.AccountNumber)
                @Html.TextBoxFor(m => m.AccountNumber, new
                {
                    @class = "form-control",
                    placeholder = "Enter account number",
                    @data_val = "true",
                    @data_val_remote = "true",
                    @data_val_remote_url = Url.Action("ValidateAccountNumber", "EMICards"),
                    @data_val_remote_error = "Account number must be 9–18 digits"
                })
                @Html.ValidationMessageFor(m => m.AccountNumber, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.IFSC_Code)
                @Html.TextBoxFor(m => m.IFSC_Code, new
                {
                    @class = "form-control",
                    placeholder = "Enter IFSC code",
                    @data_val = "true",
                    @data_val_remote = "true",
                    @data_val_remote_url = Url.Action("ValidateIFSC", "EMICards"),
                    @data_val_remote_error = "Invalid IFSC format"
                })
                @Html.ValidationMessageFor(m => m.IFSC_Code, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.AadhaarNumber)
                @Html.TextBoxFor(m => m.AadhaarNumber, new
                {
                    @class = "form-control",
                    placeholder = "Enter Aadhaar number",
                    @data_val = "true",
                    @data_val_remote = "true",
                    @data_val_remote_url = Url.Action("ValidateAadhaar", "EMICards"),
                    @data_val_remote_error = "Aadhaar must be exactly 12 digits"
                })
                @Html.ValidationMessageFor(m => m.AadhaarNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <h4 class="text-primary mb-3">Upload Documents</h4>
        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label>Aadhaar Card</label>
                <input type="file" name="Aadhaar" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label>PAN Card</label>
                <input type="file" name="PAN" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label>Bank Book Front Page</label>
                <input type="file" name="BankBook" class="form-control" required />
            </div>
        </div>

        <hr />

        <h4 class="text-primary mb-3">Pay Joining Fee</h4>
        <p>After filling this form and uploading documents, you will be redirected to pay the joining fee.</p>

        <div class="text-center mt-3 mb-4">
            <button type="submit" class="btn btn-success">Proceed to Payment</button>
            <a href="@Url.Action("Index", "EMICards")" class="btn btn-secondary">Back</a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(function () {
            $("input[data-val-remote]").on("keyup", function () {
                $(this).valid();
            });
        });
    </script>
}

<style>
    .card h3 {
        font-weight: 600;
    }

    .card {
        border-radius: 12px;
        border: 1px solid #e0e0e0;
        background-color: #fff;
    }

    .btn-success {
        background-color: #1e3a8a;
        border-color: #1e3a8a;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #16307c;
            border-color: #16307c;
        }

    .btn-secondary {
        background-color: #f0f0f0;
        border-color: #d0d0d0;
        color: #333;
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
            color: #000;
        }
</style>
