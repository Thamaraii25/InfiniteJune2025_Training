@model IKart_Shared.DTOs.Admin.SupportTicketDto
@{ Layout = "~/Views/Shared/_UserLayout.cshtml";
                ViewBag.Title = "Raise Support Ticket"; }

<div class="container mt-4">
    <h2>Raise a Support Ticket</h2>

    @if (TempData["Success"] != null)
    {
<div class="alert alert-success">@TempData["Success"]</div>}
    @if (TempData["Error"] != null)
    {
<div class="alert alert-danger">@TempData["Error"]</div>}

    @using (Html.BeginForm("Index", "Support", FormMethod.Post))
    {@*<div class="form-group">
                    @Html.LabelFor(m => m.UserId)
                    @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Subject)
                                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                                    </div>

                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Description)
                                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                                                    </div>

                                                                    <button type="submit" class="btn btn-primary">Submit</button>}
</div>