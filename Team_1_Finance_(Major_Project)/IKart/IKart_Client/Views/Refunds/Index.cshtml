@model List<IKart_Shared.DTOs.Admin.RefundDto>

@{
                Layout = "~/Views/Shared/_AdminLayout.cshtml";

                ViewBag.Title = "Refunds";

}

<div class="container mt-4">
    <div class="card shadow-sm border-0 p-4" style="min-height: 350px;">
        <h2 class="text-center mb-4">@ViewBag.Title</h2>

        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Refund ID</th>
                    <th>Payment ID</th>
                    <th>Amount</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Refund Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var refund in Model)

                {
    <tr>
        <td>@refund.RefundId</td>
        <td>@refund.PaymentId</td>
        <td>₹@refund.Amount</td>
        <td>@refund.Reason</td>
        <td class="text-center">
            <span style="

        display: inline-block;

        padding: 4px 10px;

        border-radius: 12px;

        background-color:@(

            refund.Status == "Completed" ? "#d4edda" :

            refund.Status == "Processed" ? "#fff3cd" :

            refund.Status == "Pending" ? "#f8d7da" : "#e2e3e5");

        color:@(

            refund.Status == "Completed" ? "#155724" :

            refund.Status == "Processed" ? "#856404" :

            refund.Status == "Pending" ? "#721c24" : "#6c757d");

        font-weight:600;

        font-size: 0.9rem;

        min-width: 70px;

        text-align: center;

    ">

                @refund.Status
            </span>
        </td>

        <td>@refund.RefundDate.ToString("dd-MM-yyyy")</td>
        <td class="text-center">

            @Html.ActionLink("View", "View", "Refunds", new { id = refund.RefundId }, new { @class = "btn btn-sm btn-primary" })
        </td>
    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

