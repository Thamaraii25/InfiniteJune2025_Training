@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_UserLogin.cshtml";
}

<div class="login-title">Forgot your password?</div>
<p class="mb-3 text-muted" style="font-size: 14px;">Enter your registered email address and we'll send you an OTP to reset your password.</p>

@using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
{
    <div class="form-group mb-3">
        @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Enter your email", type = "email" })
        @Html.ValidationMessage("email", "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-login w-100">Send OTP</button>
}
