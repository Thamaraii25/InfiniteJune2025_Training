@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_UserLogin.cshtml";
}

<div class="login-title">Reset your password</div>
<p class="mb-3 text-muted" style="font-size: 14px;">Enter your new password below. Make sure it's strong and secure.</p>

@using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post))
{
    @Html.Hidden("userId", (int)ViewBag.UserId)

    <div class="form-group mb-3">
        @Html.Password("newPassword", null, new { @class = "form-control", placeholder = "New password" })
        @Html.ValidationMessage("newPassword", "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "Confirm password" })
        @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-login w-100">Reset Password</button>
}
