@model IEnumerable<IKart_Shared.DTOs.FAQDto>

@{
                ViewBag.Title = "Manage FAQs";

                Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<style>

    .faq-header {
        text-align: center;
        margin: 30px 0;
        color: #5C4033; 

        font-weight: 600;
    }

    .faq-actions {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .btn-add {
        background-color: #5C4033;
        border: none;
        color: #fff;
        padding: 8px 16px;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-add:hover {
            background-color: #7B5E57;
        }

    .table {
        background-color: #fffaf0; 
    }

        .table th {
            background-color: #e6d3b3;
            color: #5C4033;
            font-weight: 600;
        }

        .table td {
            color: #4a3b2c;
        }

    .btn-warning {
        background-color: #d2a679;
        border: none;
        color: #fff;
    }

        .btn-warning:hover {
            background-color: #c1905c;
        }

    .btn-danger {
        background-color: #8b0000;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #a52a2a;
        }

    .alert-success {
        background-color: #e6f4e6;
        color: #2e5e2e;
        border: 1px solid #b2d8b2;
        text-align: center;
        margin-bottom: 20px;
    }

    .no-faqs {
        text-align: center;
        color: #8B6D5C;
        font-style: italic;
        padding: 20px;
    }
</style>

<h3 class="faq-header">FAQs for Product</h3>

@if (TempData["Message"] != null)

{
<div class="alert alert-success">@TempData["Message"]</div>
            }

<div class="faq-actions">
    <a class="btn mb-2"
       href="@Url.Action("Add", new { productId = ViewBag.ProductId })"
       style="background-color:#8B4513; color:white;">

        Add FAQ
    </a>
</div>

@if (Model != null && Model.Any(f => f != null))

{
<p class="text-center text-muted">Total FAQs received: @Model.Count()</p>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Answer</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var faq in Model)

                        {

                            if (faq == null) { continue; }

        <tr>
            <td>@(faq.Question ?? "(no question)")</td>
            <td>@(faq.Answer ?? "(no answer)")</td>
            <td>
                <a href="@Url.Action("Edit", new { id = faq.FaqId })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", new { id = faq.FaqId, productId = faq.ProductId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this FAQ?');">Delete</a>
            </td>
        </tr>
                        }
                    </tbody>
                </table>
                                <div class="text-center">
                                    <a href="@Url.Action("SelectProduct", "FAQAdmin")"
                                       class="btn"
                                       style="background-color:#8B4513; color:white;">

                                        Back
                                    </a>
                                </div>
                                            }

                                            else

                                            {
                                <div class="no-faqs">No FAQs available for this product.</div>
                                            }

