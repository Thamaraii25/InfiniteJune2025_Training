@model IKart_Shared.DTOs.Admin.OrderDetailsDto

@{ ViewBag.Title = "Order Details - Admin Dashboard";

    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<div class="container mt-4">
    <h2 class="mb-4">Order #@Model.Order_Id Details</h2>
    <div class="card mb-3">
        <div class="card-body">
            <h5>User: @Model.UserName</h5>
            <p>Product: <strong>@Model.ProductName</strong></p>
            @*<p>Cost: ₹@Model.ProductCost.ToString("N2")</p>*@
            <p>Payment Type: @Model.PaymentType</p>
            @*<p>Paid: ₹@Model.PaidAmount.ToString("N2")</p>*@
            <p>Cost: ₹@Model.RemainingAmount.ToString("N2")</p>
            <p>Tenure: @Model.TenureMonths months</p>
            <p>Months Remaining: @Model.MonthsRemaining</p>
            <p>Order Date: @Model.OrderDate.ToString("dd-MMM-yyyy")</p>
            <p>Delivery Date: @(Model.DeliveryDate?.ToString("dd-MMM-yyyy") ?? "Not Delivered")</p>
        </div>
    </div>
    <h4>Payment History</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Payment Date</th>
                <th>Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var p in Model.Payments)

            {
<tr>
    <td>@p.PaymentDate.ToString("dd-MMM-yyyy")</td>
    <td>₹@p.Amount.ToString("N2")</td>
    <td>@p.Status</td>
</tr>
       }
        </tbody>
    </table>
</div>
