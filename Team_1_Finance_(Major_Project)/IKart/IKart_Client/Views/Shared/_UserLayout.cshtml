@{ ViewBag.Title = "_UserLayout";

    var userFullName = Session["FullName"] != null ? Session["FullName"].ToString() : "User";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - IKart</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>

        :root {
            --sidebar-width: 260px;
            --primary-blue: #5a7dbd; /* darker pastel blue for panels */

            --bg-white: #ffffff;
            --text-black: #1a1a1a;
        }

        body {
            margin: 0;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg-white);
            color: var(--text-black);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Sidebar */

        #userSidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100%;
            background: var(--bg-white);
            color: var(--text-black);
            padding: 20px;
            border-right: 1px solid rgba(0,0,0,0.08);
            transform: translateX(-100%);
            transition: transform 0.35s ease-in-out;
            z-index: 2000;
        }

            #userSidebar.open {
                transform: translateX(0);
            }

            #userSidebar .sidebar-brand {
                font-size: 1.4rem;
                font-weight: 700;
                margin-bottom: 25px;
                text-align: center;
                color: var(--text-black);
            }

            #userSidebar a {
                display: flex;
                align-items: center;
                padding: 10px 14px;
                margin-bottom: 8px;
                color: var(--text-black);
                text-decoration: none;
                border-radius: 8px;
                font-weight: 500;
                transition: all 0.25s ease;
            }

                #userSidebar a i {
                    margin-right: 12px;
                }

                #userSidebar a:hover {
                    background: var(--primary-blue);
                    color: #fff !important;
                    transform: translateX(3px);
                }

            #userSidebar .text-danger {
                color: #b30000 !important;
            }

                #userSidebar .text-danger:hover {
                    background: #800000;
                    color: #fff !important;
                }

        /* Main wrapper */

        .page-content {
            transition: margin-left 0.35s ease;
            margin-left: 0;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

            .page-content.shifted {
                margin-left: var(--sidebar-width);
            }

        /* Topbar */

        #topbar {
            background: var(--bg-white);
            padding: 12px 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1000;
            color: var(--text-black);
            border-bottom: 1px solid rgba(0,0,0,0.08);
        }

        #menuBtn {
            background: transparent;
            border: none;
            font-size: 1.4rem;
            color: var(--text-black);
            cursor: pointer;
            margin-right: 12px;
        }

        .brand-logo {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

            .brand-logo img {
                max-width: 160px;
            }

        #searchBar {
            display: flex;
            align-items: stretch; /* input and button same height */

            max-width: 450px;
            flex-grow: 1;
            margin: 0 20px;
        }

            #searchBar input {
                border-radius: 20px 0 0 20px;
                border: 1px solid rgba(0,0,0,0.15);
                padding: 0 15px;
                font-size: 14px;
                flex: 1;
                height: 38px; /* fixed height */

                box-sizing: border-box;
            }

            #searchBar button {
                border: none;
                background: var(--primary-blue);
                color: #fff;
                border-radius: 0 20px 20px 0;
                padding: 0 14px;
                cursor: pointer;
                display: flex;
                align-items: center; /* vertically center icon */

                justify-content: center;
                height: 38px; /* match input height */
            }

                #searchBar button i {
                    color: #fff;
                    font-size: 16px;
                }


        /* Footer */

        footer.footer {
            text-align: center;
            padding: 14px;
            color: #fff;
            background: var(--primary-blue);
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        /* Mobile tweak */

        @@media (max-width: 767px) {

            #userSidebar {
                width: 80vw;
            }

            .page-content.shifted {
                margin-left: 0;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <nav id="userSidebar">
        <div class="brand-logo">
            <img src="~/Logo/Logo.png" alt="IKart" />
        </div>

        @Html.Partial("~/Views/Shared/_UserSidebar.cshtml")
    </nav>

    <!-- Main page -->
    <div class="page-content" id="mainContent">
        <!-- Topbar -->
        <div id="topbar">
            <div class="d-flex align-items-center">
                <button id="menuBtn"><i class="fas fa-bars"></i></button>
                <h5 class="mb-0"><strong>IKart</strong></h5>
            </div>

            <!-- Search -->
            <form class="form-inline mx-auto w-50"
                  action="@Url.Action("Products","ProductSearch")"
                  method="get">

                <input class="form-control w-75"
                       type="text"
                       name="query"
                       placeholder="Search for products..."
                       value="@(Request.QueryString["query"] ?? string.Empty)" />

                <button class="btn btn-warning ml-2" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </form>


            <div>
                <span>Welcome, @userFullName</span>
            </div>
        </div>

        <!-- Content -->
        <div id="content" class="container-fluid mt-3">

            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        &copy; @DateTime.Now.Year - IKart
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        const sidebar = document.getElementById("userSidebar");

        const main = document.getElementById("mainContent");

        const menuBtn = document.getElementById("menuBtn");

        menuBtn.addEventListener("click", () => {

            sidebar.classList.toggle("open");

            main.classList.toggle("shifted");

        });

        document.addEventListener("keydown", (e) => {

            if (e.key === "Escape") {

                sidebar.classList.remove("open");

                main.classList.remove("shifted");

            }

        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

