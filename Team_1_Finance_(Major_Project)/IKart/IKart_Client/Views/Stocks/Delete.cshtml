@model IKart_Shared.DTOs.Admin.StocksDto

@{
                Layout = "~/Views/Shared/_AdminLayout.cshtml";

                ViewBag.Title = "Delete Stock";

}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm border-0 p-4" style="max-width: 600px; width: 100%;">
        <h2 class="text-center text-danger mb-4">@ViewBag.Title</h2>

        @if (ViewBag.Error != null)

        {
<div class="alert alert-danger">

    @ViewBag.Error
</div>
            }

        <p class="text-center">Are you sure you want to delete this stock?</p>

        <dl class="row">
            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category</dd>

            <dt class="col-sm-4">Sub Category</dt>
            <dd class="col-sm-8">@Model.SubCategory</dd>

            <dt class="col-sm-4">Total Stocks</dt>
            <dd class="col-sm-8">@Model.TotalStocks</dd>

            <dt class="col-sm-4">Available Stocks</dt>
            <dd class="col-sm-8">@Model.AvailableStocks</dd>
        </dl>

        @using (Html.BeginForm("Delete", "Stocks", FormMethod.Post))

        {

            @Html.AntiForgeryToken()

                            @Html.HiddenFor(m => m.StockId)

                                            <div class="text-center mt-4">
                                                <button type="submit" class="btn btn-danger px-4">Delete</button>
                                                <a href="@Url.Action("Index", "Stocks")" class="btn btn-secondary px-4">Cancel</a>
                                            </div>
                                                        }
    </div>
</div>

